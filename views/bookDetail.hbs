<html lang='es'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Detalle del Libro</title>
        <link rel='icon' href='/favicon.svg' type='image/svg+xml' />
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' />
    </head>
    <body>
        <div class='container mt-5'>
            <h1>{{book.nombre}}</h1>
            <p><strong>Cantidad disponible:</strong> {{book.cantidad_disponible}}</p>

            {{#if error}}
                <div class='alert alert-danger'>{{error}}</div>
            {{/if}}

            <form action='/libros/{{book.id}}/comprar' method='POST' class='mb-3'>
                <div class='mb-3'>
                    <label for='cantidad' class='form-label'>Cantidad a comprar:</label>
                    <input type='number' name='cantidad' id='cantidad' min='1' max='{{book.cantidad_disponible}}' class='form-control' required />
                </div>
                <button type='submit' class='btn btn-success'>Comprar</button>
            </form>

            <a href='/libros' class='btn btn-secondary'>Volver al listado</a>
        </div>
    </body>
</html>